@model Eshop.Models.User

@{
	ViewData["Title"] = "注册";
}

<div class="row justify-content-center">
	<div class="col-12 col-md-8 col-lg-5">
		<div class="card shadow-sm card-form">
			<div class="card-body">
				<h2 class="card-title h4 mb-3">用户注册</h2>
				<form asp-action="Register" method="post" novalidate>
					@Html.AntiForgeryToken()
					<div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
					<div class="mb-3">
						<label class="form-label form-label-required" asp-for="UserName">用户名</label>
						<input class="form-control" asp-for="UserName" autocomplete="username" />
						<span class="text-danger" asp-validation-for="UserName"></span>
					</div>
					<div class="mb-3">
						<label class="form-label form-label-required" asp-for="Password">密码</label>
						<input class="form-control" type="password" asp-for="Password" autocomplete="new-password" />
						<span class="text-danger" asp-validation-for="Password"></span>
					</div>
					<div class="d-grid">
						<button type="submit" class="btn btn-primary">注册</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
