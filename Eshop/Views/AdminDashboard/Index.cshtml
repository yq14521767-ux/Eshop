@model Eshop.Models.Admin.DashboardVm
@{
    ViewData["Title"] = "后台统计";
}

<!-- 页面标题 -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">后台统计</h2>
    <small class="text-muted">@DateTime.Now.ToString("yyyy-MM-dd HH:mm")</small>
</div>

<!-- 四张卡片 -->
<div class="row g-4">
    <!-- 商品 -->
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0">
                    <i class="bi bi-box-seam text-primary" style="font-size:2.5rem;"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <h5 class="fw-bold mb-0">@Model.TotalProducts</h5>
                    <small class="text-muted">商品总数</small>
                </div>
            </div>
        </div>
    </div>

    <!-- 订单 -->
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0">
                    <i class="bi bi-receipt text-success" style="font-size:2.5rem;"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <h5 class="fw-bold mb-0">@Model.TotalOrders</h5>
                    <small class="text-muted">订单总数</small>
                </div>
            </div>
        </div>
    </div>

    <!-- 用户 -->
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0">
                    <i class="bi bi-people text-warning" style="font-size:2.5rem;"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <h5 class="fw-bold mb-0">@Model.TotalUsers</h5>
                    <small class="text-muted">用户总数</small>
                </div>
            </div>
        </div>
    </div>

    <!-- 销售额 -->
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0">
                    <i class="bi bi-currency-yen text-danger" style="font-size:2.5rem;"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <h5 class="fw-bold mb-0">@Model.TotalSales.ToString("C")</h5>
                    <small class="text-muted">销售总额</small>
                </div>
            </div>
        </div>
    </div>
</div>