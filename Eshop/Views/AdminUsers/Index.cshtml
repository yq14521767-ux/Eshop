@model IEnumerable<Eshop.Models.User>

@{
	ViewData["Title"] = "用户管理";
}

<div class="page-header">
	<h2 class="m-0">用户管理</h2>
	<a class="btn btn-success" asp-controller="AdminUsers" asp-action="Create">
		<i class="bi bi-plus-lg"></i> 添加用户
	</a>
</div>

<table class="table table-hover table-bordered align-middle">
	<thead>
		<tr>
			<th>用户名</th>
			<th>密码</th>
			<th>身份</th>
			<th>操作</th>
		</tr>
	</thead>

	<tbody>
		@foreach(var u in Model)
		{
			<tr>
				<td>@u.UserName</td>
				<td class="text-muted small">@Convert.ToBase64String(u.PasswordHash)</td>
				<td>@(u.IsAdmin ? "管理员":"客户")</td>
				<td>
					<div class="table-actions">
						<a class="btn btn-primary btn-sm"
						   asp-controller="AdminUsers" 
						   asp-action="Edit"
						   asp-route-id="@u.Id">编辑</a>
						<a class="btn btn-danger btn-sm"
						   asp-controller="AdminUsers" 
						   asp-action="Delete"
						   asp-route-id="@u.Id"
						   onclick="return confirm('确定要删除此用户吗？');">删除</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
