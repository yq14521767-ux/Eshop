@model Eshop.Models.User

@{
	ViewData["Title"] = "编辑用户";
}

<div class="row justify-content-center">
	<div class="col-12 col-md-8 col-lg-5">
		<div class="card shadow-sm card-form">
			<div class="card-body">

				<div class="page-header">
					<h2 class="m-0">编辑用户</h2>
					<a asp-action="Index" class="btn btn-outline-secondary">返回</a>
				</div>

				<form asp-controller="AdminUsers" asp-action="Edit" method="post" class="card shadow-sm card-form p-3" novalidate>
					@Html.AntiForgeryToken()
					<div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
					<input type="hidden" asp-for="Id" />

					<div class="mb-3">
						<label class="form-label">用户名</label>
						<input asp-for="UserName" class="form-control" readonly />
						<span asp-validation-for="UserName" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label class="form-label" for="password">新密码</label>
						<input id="password" name="password" class="form-control" type="password" autocomplete="new-password" />
					</div>

					<div class="d-grid gap-2 d-sm-flex">
						<button type="submit" class="btn btn-primary">保存</button>
					</div>
				</form>

			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}